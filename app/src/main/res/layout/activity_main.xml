<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.anawahidah_1202154337_modul4.MainActivity"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="List Nama Mahasiswa"
        android:textSize="25dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_asynctask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:onClick="asynctask"
        android:text="Mulai AsyncTask"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"/>

    <ListView
        android:id="@+id/listMhs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
